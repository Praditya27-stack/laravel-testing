# ========================================
# PT AISIN INDONESIA - RECRUITMENT SYSTEM
# Environment Configuration v2.0
# ========================================

# Application
APP_NAME="PT Aisin Recruitment System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=erp_system
DB_USERNAME=postgres
DB_PASSWORD=

# Cache & Session
CACHE_DRIVER=redis
CACHE_PREFIX=aisin_recruitment
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Redis
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@aisin.co.id
MAIL_FROM_NAME="${APP_NAME}"

# Alternative Mail Providers (uncomment to use)
# Mailgun
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=
# MAILGUN_SECRET=
# MAILGUN_ENDPOINT=api.mailgun.net

# AWS SES
# MAIL_MAILER=ses
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# Filesystem
FILESYSTEM_DISK=public
FILESYSTEM_CLOUD=s3

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Scout (Search)
SCOUT_DRIVER=meilisearch
SCOUT_QUEUE=true
SCOUT_CHUNK_SIZES=500

# Meilisearch
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

# Horizon
HORIZON_DOMAIN=localhost
HORIZON_PATH=horizon
HORIZON_REDIS_CONNECTION=horizon
HORIZON_REDIS_QUEUE=default

# Livewire
LIVEWIRE_ASSET_URL=null

# Spatie Media Library
MEDIA_DISK=public
MEDIA_MAX_FILE_SIZE=10240
MEDIA_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Spatie Permission
PERMISSION_CACHE_EXPIRATION_TIME=1440

# Excel Import/Export
EXCEL_CACHE_DRIVER=redis
EXCEL_CHUNK_SIZE=1000

# PDF Generation
DOMPDF_ENABLE_REMOTE=true
DOMPDF_ENABLE_CSS_FLOAT=true
DOMPDF_ENABLE_HTML5_PARSER=true

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting (Optional - for real-time features)
BROADCAST_DRIVER=log
# BROADCAST_DRIVER=pusher
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# Vite (Frontend Build)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ========================================
# RECRUITMENT SYSTEM SPECIFIC
# ========================================

# NIK Verification API (Disdukcapil)
DISDUKCAPIL_API_URL=https://api.disdukcapil.go.id
DISDUKCAPIL_API_KEY=
DISDUKCAPIL_API_SECRET=

# WhatsApp Business API
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Application Settings
RECRUITMENT_MAX_APPLICATIONS_PER_USER=5
RECRUITMENT_APPLICATION_EXPIRY_DAYS=30
PSYCHOTEST_EXPIRY_HOURS=48
PSYCHOTEST_PASSING_GRADE=70
INTERVIEW_REMINDER_HOURS=24
BACKGROUND_CHECK_EXPIRY_DAYS=7
MCU_REMINDER_DAYS=3

# File Upload Limits
MAX_CV_SIZE_MB=5
MAX_PHOTO_SIZE_MB=2
MAX_CERTIFICATE_SIZE_MB=3
ALLOWED_CV_FORMATS=pdf,doc,docx
ALLOWED_PHOTO_FORMATS=jpg,jpeg,png
ALLOWED_CERTIFICATE_FORMATS=pdf,jpg,jpeg,png

# Profile Completion Requirements
PROFILE_COMPLETION_REQUIRED_PERCENTAGE=80
PROFILE_COMPLETION_SECTIONS=identity,education,family,work,skills

# PDP (Personal Data Protection)
PDP_CONSENT_REQUIRED=true
PDP_CONSENT_VERSION=1.0
PDP_DATA_RETENTION_YEARS=5

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_MONTHS=24

# Notification Settings
NOTIFICATION_QUEUE_ENABLED=true
NOTIFICATION_RETRY_TIMES=3
NOTIFICATION_RETRY_DELAY_MINUTES=5

# Export Settings
EXPORT_QUEUE_ENABLED=true
EXPORT_CHUNK_SIZE=1000
EXPORT_TIMEOUT_SECONDS=300

# Security
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_MINUTE=100

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_SECRET=

# Debug & Development
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
QUERY_LOG_ENABLED=false

# ========================================
# OPTIONAL SERVICES
# ========================================

# Sentry (Error Tracking)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# Google Analytics
GOOGLE_ANALYTICS_ID=

# reCAPTCHA (for application forms)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# SMS Gateway (Optional)
SMS_GATEWAY_URL=
SMS_GATEWAY_API_KEY=
SMS_GATEWAY_SENDER_ID=

# ========================================
# FILAMENT ADMIN PANEL
# ========================================

FILAMENT_DOMAIN=localhost
FILAMENT_PATH=admin
FILAMENT_DARK_MODE=true
FILAMENT_BRAND_NAME="${APP_NAME}"
